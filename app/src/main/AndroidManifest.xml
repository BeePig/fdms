<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.framgia.fdms"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".feature.authenication.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.authenication.register.RegisterActivity"
            android:label="@string/action_register">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feature.authenication.login.LoginActivity">
            </meta-data>
        </activity>
        <activity android:name=".feature.main.MainActivity"/>
    </application>

</manifest>