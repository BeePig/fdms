<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>

        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.returndevice.ReturnDeviceViewModel"
            />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            bind:titleToolbar="@{@string/title_device_return}"
            bind:view="@{viewModel.activity}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            >
            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edit_search_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:text="@={viewModel.nameUserReturn.name}"
                bind:autoComplete="@{viewModel.assignerAdapter}"
                bind:spinnerSetSelection="@{spinnerNameUser}"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_name_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dp_5"
                bind:selectedValue="@={viewModel.nameUserReturn}"
                bind:spinnerAdapter="@{viewModel.assignerAdapter}"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                app:layoutManager="LinearLayoutManager"
                app:recyclerAdapter="@{viewModel.adapter}"
                />

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/dp_170"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{()-> viewModel.onReturnDevice()}"
                app:cardBackgroundColor="@color/color_teal_500"
                app:cardCornerRadius="@dimen/dp_3"
                app:cardUseCompatPadding="true"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="@string/action_return_device"
                    android:textColor="@color/color_white"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>
