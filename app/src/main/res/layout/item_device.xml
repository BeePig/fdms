<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    >

    <data class="ItemDataBinding">
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.main.ItemDeviceResultViewModel"
            />
        <variable
            name="item"
            type="com.framgia.fdms.data.model.Device"
            />
    </data>

    <android.support.v7.widget.CardView
        xmlns:car_view="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:elevation="@dimen/dp_3"
        android:onClick="@{viewModel::onItemClicked}"
        android:padding="@dimen/dp_3"
        car_view:cardCornerRadius="@dimen/dp1"
        car_view:cardElevation="@dimen/dp1"
        tools:cardCornerRadius="@dimen/dp_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_1"
            >

            <ImageView
                android:id="@+id/imageItem"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_margin="@dimen/dp_3"
                android:adjustViewBounds="true"
                app:imageUrl="@{item.picture.url}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text='@{@string/title_name_device+item.productionName}'
                    />

                <TextView
                    android:id="@+id/text_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:text='@{@string/title_date_device+item.boughtDate}'
                    />


                <TextView
                    android:id="@+id/text_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{@string/title_category+item.deviceCategoryName}'
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="@{item.deviceStatusName}"
                    />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>

