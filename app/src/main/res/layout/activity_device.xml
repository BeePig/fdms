<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.device.DeviceViewModel"
            />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_gray_blue"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_title"
                android:gravity="center"
                android:text="@string/title_register_my_device"
                android:textColor="@color/color_brown"
                android:textSize="@dimen/dp30"
                android:textStyle="bold"
                app:font='@{@string/title_asset_font}'
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/boder_title"
                android:orientation="vertical"
                android:padding="@dimen/dp10"

                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:textColorHint="@color/color_brown"
                    app:errorText="@{viewModel.titleError}"
                    app:hintTextAppearance="@color/color_brown"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/text_title_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_title"
                        android:text="@={viewModel.title}"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:textColorHint="@color/color_brown"
                    app:errorText="@{viewModel.descriptionError}"
                    app:hintTextAppearance="@color/color_brown"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/text_description_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_descriptions"
                        android:text="@={viewModel.description}"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:textColorHint="@color/color_brown"
                    app:errorText="@{viewModel.nameDeviceError}"
                    app:hintTextAppearance="@color/color_brown"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/text_name_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_device_name"
                        android:text="@={viewModel.nameDevice}"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:spinnerAdapter="@{viewModel.adapter}"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:textColorHint="@color/color_brown"
                    app:errorText="@{viewModel.numberError}"
                    app:hintTextAppearance="@color/color_brown"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/text_number_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_number_of_devices"
                        android:text="@={viewModel.number}"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/boder_title"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp10"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:background="@drawable/boder_title"
                    android:drawableLeft="@drawable/ic_framgia"
                    android:onClick="@{() -> viewModel.onCreateDeviceClick()}"
                    android:text="@string/action_register"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
