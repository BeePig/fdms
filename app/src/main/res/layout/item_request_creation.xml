<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.requestcreation.RequestCreationViewModel"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@drawable/bg_item"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_10"
            android:textColorHint="@color/color_brown"
            app:hintTextAppearance="@color/color_brown"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_device_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_descriptions"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_10"
            android:textColorHint="@color/color_brown"
            app:hintTextAppearance="@color/color_brown"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_device_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_btn_category"
                android:focusable="false"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_10"
            android:textColorHint="@color/color_brown"
            app:hintTextAppearance="@color/color_brown"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_device_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_number"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</layout>
